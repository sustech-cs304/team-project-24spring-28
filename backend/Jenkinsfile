pipeline {

    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo "Building...."'
                sh 'cd backend'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Testing...."'
                sh 'cd backend'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying...."'
            }
        }
    }
}